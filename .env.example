# SQLite connection string example (default for development)
# DATABASE_CONNECTION_STRING="Data Source=clinicalintelligence.db"

# PostgreSQL connection string (recommended for production)
# Use the bootstrap script to create the database and user:
#   .\scripts\db\install_postgresql.ps1 -AdminPassword "postgres_pass" -AppPassword "app_pass"
DATABASE_CONNECTION_STRING="Host=localhost;Port=5432;Database=ClinicalIntelligence;Username=clinicalintelligence_app;Password=your_app_password"

# Development database name (optional, defaults to clinicalintelligence.db)
# DEV_DATABASE_NAME="my_custom_dev.db"

# Gemini API key example (replace with your actual key)
GEMINI_API_KEY=your_gemini_api_key_here

# JWT configuration for API authentication (generate a secure 32+ character key)
JWT_KEY=your_super_secure_jwt_key_at_least_32_characters_long

# Bcrypt work factor for password hashing (minimum 12, default 12)
# Higher values increase security but also increase CPU time for hashing
# Recommended: 12 for most deployments, increase if hardware allows
BCRYPT_WORK_FACTOR=12

# CORS allowed origins (semicolon-delimited list of frontend URLs)
# Required for production deployments; development mode uses localhost defaults
# Example: CORS_ALLOWED_ORIGINS=https://app.example.com;https://staging.example.com
CORS_ALLOWED_ORIGINS=
